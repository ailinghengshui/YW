<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_machines_item"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/standard_white"
    android:clickable="true">

    <View
        android:id="@+id/item_top_grey"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_little_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_machines_id"
            android:layout_width="66dp"
            android:layout_height="78dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:background="@drawable/shape_home_rect"
            android:textSize="24sp"
            android:textColor="@color/standard_white"
            android:text="12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_machines_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rect_light_blue"
                    android:textSize="17sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/heavy_grey"
                    android:text="teest001" />

                <TextView
                    android:id="@+id/tv_machines_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/rect_light_blue"
                    android:textSize="17sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/heavy_grey"
                    android:text="teach" />

                <TextView
                    android:id="@+id/tv_machines_menu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/rect_light_blue"
                    android:textSize="17sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/heavy_grey"
                    android:text="菜单01" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_machines_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/heavy_grey"
                android:text="江干区白杨街道高科技孵化器大厅" />

            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                layout="@layout/item_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_machines_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="机器正常" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/color_line" />

                <TextView
                    android:id="@+id/tv_machines_leave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="余料充足" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/color_line" />

                <TextView
                    android:id="@+id/tv_machines_line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="网络离线" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/color_line" />

                <TextView
                    android:id="@+id/tv_machines_lock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="锁定" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/color_line" />

                <TextView
                    android:id="@+id/tv_machines_operation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"
                    android:text="未运营" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

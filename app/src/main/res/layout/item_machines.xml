<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_more_item_machine"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/standard_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_machine_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="1" />

        <TextView
            android:id="@+id/tv_machine_item_id"
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:background="@drawable/shape_home_rect"
            android:textSize="24sp"
            android:textColor="@color/standard_white"
            android:text="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_machine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/heavy_grey"
                android:text="tech111" />

            <TextView
                android:id="@+id/tv_machine_location"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.5dp"
                android:textSize="12sp"
                android:textColor="@color/heavy_grey"
                android:text="江干区孵化器2幢极乐空间ADSL会计分录卡积分了解到了看电视剧了房间" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_line" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_little_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/standard_white">

        <EditText
            android:id="@+id/etNewPsdPsd"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="14dp"

            android:textColorHint="@color/standard_grey"
            android:hint="输入新密码" />

        <ImageView
            android:id="@+id/ivNewpsdfrgClear"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_grey_clear" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/standard_white">

        <EditText
            android:id="@+id/etNewPsdRePsd"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="14dp"
            android:textColorHint="@color/standard_grey"
            android:hint="请再次输入新密码" />

        <ImageView
            android:id="@+id/ivNewpsdfrgReclear"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="7dp"
            android:padding="5dp"
            android:src="@drawable/icon_grey_clear" />

    </LinearLayout>

    <Button
        android:id="@+id/btnNewPsdOK"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login_button"
        android:enabled="false"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="完成" />

</LinearLayout>

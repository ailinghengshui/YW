<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/standard_white">

    <View
        android:id="@+id/view_amount_head"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_little_grey" />

    <View
        android:id="@+id/view_head2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/standard_white" />

    <com.hzjytech.operation.widgets.OrderBarView
        android:id="@+id/bar_amount"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="5dp" />

    <View
        android:id="@+id/view_foot"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/standard_white" />
</LinearLayout>

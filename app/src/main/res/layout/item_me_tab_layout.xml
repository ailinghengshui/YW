<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/llPsninfoNickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="11.5dp"
        android:paddingRight="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/standard_white">

        <TextView
            android:id="@+id/tab_me_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/heavy_grey"
            android:text="昵称" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tab_me_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:lines="1"
            android:textColor="@color/standard_grey"
            android:text="hehongcan" />

        <ImageView
            android:id="@+id/iv_me_right"
            android:layout_width="5dp"
            android:layout_height="8.5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_little_grey">

    <include layout="@layout/titlebar" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/rect_logo" />

    <TextView
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:text="运维app1.0.0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36.5dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="34.5dp"
        android:textSize="14sp"
        android:textColor="@color/heavy_grey"
        android:text="@string/about_detail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="14sp"
        android:textColor="@color/heavy_grey"
        android:text="CopyRight@2017-2020\n杭州锦业科技有限公司" />
</LinearLayout>
